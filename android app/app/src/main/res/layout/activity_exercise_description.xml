<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/main_activity_background_header"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:id="@+id/exeTitle"
            android:textColor="@color/main_activity_text_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="37"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/backgroundImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/apple"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="false"
            app:showFullScreenButton="false"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:drawableStart="@drawable/time"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:text="@string/min"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end"
                >

                <ImageButton
                    android:id="@+id/reduceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reduce"
                    tools:ignore="ContentDescription" />
                <EditText
                    android:id="@+id/exeDesTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@null"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />
                <ImageButton
                    android:id="@+id/plusTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn"
                    android:layout_marginStart="10dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/exeDesCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableStart="@drawable/fire"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/blue"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="43">
        <TextView
            android:id="@+id/exeDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="20dp"
            android:textSize="20sp"
            />
    </ScrollView>

</LinearLayout>